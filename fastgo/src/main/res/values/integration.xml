<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XLoadingView">
        <attr name="x_loading_view_size" format="dimension" />
        <attr name="android:color" />
    </declare-styleable>

    <attr name="XLoadingStyle" format="reference" />
    <attr name="x_content_padding_horizontal" format="dimension" />
    <attr name="x_content_spacing_horizontal" format="dimension" />
    <attr name="x_tip_dialog_bg" format="reference" />
    <attr name="x_tip_dialog_margin_horizontal" format="dimension" />
    <attr name="x_tip_dialog_min_height" format="dimension" />
    <attr name="x_tip_dialog_min_width" format="dimension" />
    <attr name="x_tip_dialog_padding_horizontal" format="dimension" />
    <attr name="x_tip_dialog_padding_vertical" format="dimension" />
    
    <style name="XTipDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="x_tip_dialog_bg">@drawable/x_tip_dialog_bg</item>
        <item name="x_tip_dialog_min_width">120dp</item>
        <item name="x_tip_dialog_min_height">56dp</item>
        <item name="x_tip_dialog_margin_horizontal">?attr/x_content_spacing_horizontal</item>
        <item name="x_tip_dialog_padding_vertical">12dp</item>
        <item name="x_tip_dialog_padding_horizontal">?attr/x_content_padding_horizontal</item>
        <item name="x_content_spacing_horizontal">20dp</item>
        <item name="x_content_padding_horizontal">20dp</item>
    </style>

    <style name="x_tip_dialog_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">?attr/x_tip_dialog_min_width</item>
        <item name="android:minHeight">?attr/x_tip_dialog_min_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">?attr/x_content_spacing_horizontal</item>
        <item name="android:layout_marginRight">?attr/x_content_spacing_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">?attr/x_tip_dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/x_tip_dialog_padding_horizontal</item>
        <item name="android:paddingTop">?attr/x_tip_dialog_padding_vertical</item>
        <item name="android:paddingBottom">?attr/x_tip_dialog_padding_vertical</item>
        <item name="android:background">?attr/x_tip_dialog_bg</item>
    </style>
</resources>